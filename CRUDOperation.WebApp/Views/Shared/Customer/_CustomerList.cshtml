@model ICollection<CRUDOperation.Models.Customer>


    <div class="row">
        @* Add by Biplob*@
        <p>
            @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
            {
                <b>Search By:</b>
                @Html.RadioButton("searchBy", "Name", true) <text>Name</text>
                @Html.RadioButton("searchBy", "Address") <text>Address</text><a>&nbsp;</a>
                @Html.TextBox("search")<input type="submit" value="Search" />

                <a asp-action="Create"><b>Back to List</b></a>

            }

        </p>
        <table class="table table-striped table-responsive table-hover table-condensed table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>LoyaltyPoint</th>
                    <th>Phone No</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Name</td>
                        <td>@customer.Address</td>
                        <td>@customer.LoyaltyPoint</td>
                        <td>@customer.Phone</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-success" ><span><strong><i class="fa fa-edit"> Edit</i></strong></span></a>
                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger" onclick="return confirm('Are you sure ,You want to delete ? Customer : @customer.Name')" id="Delete"><span><i class="fa fa-trash-o"><strong> Delete</strong></i></span></a>
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-primary"><span><i class="fa fa-align-justify"><strong> Details</strong></i></span></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p><h4><b class="text-danger">If You want to add a new Customer Please Click Create Customer Button.</b></h4></p>

    </div>

    