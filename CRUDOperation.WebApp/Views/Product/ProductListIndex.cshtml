<div class="container" style="margin-top:30px;">
    <div class="row">

        <div class="col-sm-12 col-md-12 col-lg-12">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="zoom-effect-container">
                        <div class="card">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn-link">
                                <td>
                                    @{
                                        if (product.ImageUrl != null)
                                        {
                                            String img64 = Convert.ToBase64String(product.ImageUrl);
                                            String img64url = string.Format("data:Image/" + product.ImageUrl + ";base64,{0}", img64);

                                            <img class="card-img-top" src="@img64url" alt="Card image" />

                                        }
                                        else
                                        {
                                            <img class="card-img-top" src="~/img/default.jpg" alt="Card image" />
                                        }

                                    }
                                </td>
                            </a>


                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    <a style="color:coral"><b> ৳  &nbsp; @product.Price </b></a> <br>
                                    Category: @product.Category.Name
                                </p>
                                <a asp-controller="cart" asp-action="buy" asp-route-id="@product.Id" id="divbutton" class="btn" style="width:240px; background-color:#ff6600; color: #fff;">Add To Cart</a>
                            </div>

                        </div>
                    </div>

                </div>

            }
        </div>


    </div>
