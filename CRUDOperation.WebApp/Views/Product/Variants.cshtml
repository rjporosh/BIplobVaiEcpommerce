
<div class="row">
    <div>
        <img src="~/img/ILLIYEEN-Logo2.png" style="width:100px; height:100px; margin-top:10px; margin-left:500px" />
    </div>
</div>
<br />
<br />
<br />


<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="col-md-2">
                <div class="form-horizontal">
                    <div class="form-group">
                        <h3><label for="categoryDropDown" class="col-md-2"><b>Variants</b></label></h3>
                        <div class="col-md-6">
                            <p>
                                Choose up to three variable attributes for this product to create and manage SKUs and their inventory levels.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <h4><label for="attributeDropDown"><b>Attribute (e.g. Colour)</b></label></h4>
                <select id="attributeDropDown" class="form-control"></select>
            </div>

        </div>
        <div class="col-md-7">
            <div class="form-group">
                <h4><label for="colorInput"><b>Value (e.g. Red, Blue, Green)</b></label></h4>
                <input type="text" class="form-control" id="introText">
            </div>
        </div>

        

        <div class="col-md-3">
            <button id="btnShow" type="button" class="btn btn-primary btn-row  fa fa-plus-square">  <b>Add another Attributes</b></button>
            <h4><b>This product has 0 variants.</b></h4>
        </div>

    </div>
</div>

@section Scripts{

    
    <script type="text/javascript">
        $(document).ready(() => {
            //variant dropdown load
            $.ajax(
                {
                    url: "/api/variants",
                    type: "GET",
                    accept: "application/json",
                    success: (variants) => {
                        var attribueDD = $('#attributeDropDown');
                        attribueDD.append('<option>Select...</option>');
                        $.each(variants, (index, variant) => {
                            var option = "<option value='" + variant.id + "'>" + variant.name + "</option>";
                            attribueDD.append(option);
                        });
                    },
                    error: (response) => {

                    }

                });

            
        });

    </script>
}


