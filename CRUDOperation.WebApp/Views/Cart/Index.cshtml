@*@model ICollection<CRUDOperation.Models.Item>*@

<h2>Your Shopping Cart</h2>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th> Price </th>
            @*<th>Category Name </th>*@
            <th>Quantity</th>
            <th>Sub-Total</th>
            <th>Action</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var product in ViewBag.cart)
        {
            <tr>

                <td>
                    <img class="img-responsive" width="50" height="50" src="data:image/jpeg;base64,@Convert.ToBase64String(product.product.ImageUrl)" />
                </td>
                <td>@product.product.Name</td>
                <td>@product.product.Price ৳</td>
                @*<td>@product.product.Category.Name</td>*@
                <td>@product.Quantity</td>
                <td>@(product.product.Price * product.Quantity)</td>
                <td align="center">
                    <a asp-controller="cart" asp-action="Remove" asp-route-id="@product.product.Id">Remove Item</a>
                </td>
            </tr>
        }
    <tr>
        <td colspan="4" align="right">Total</td>
        <td>@ViewBag.Total</td>
    </tr>
    </tbody>
</table>
<br />
<br />
<a class="btn btn-success" asp-controller="Product" asp-action="ProductListIndex">Continue Shopping</a>
<a class="btn btn-success" asp-controller="Order" asp-action="Create">Place Order</a>
