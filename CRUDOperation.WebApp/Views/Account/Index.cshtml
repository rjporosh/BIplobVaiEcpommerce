@model IEnumerable<CRUDOperation.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h2>All Users</h2>
@if (Model.Any())
{
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th> Email </th>
                <th> Phone </th>
                <th> Address </th>
                <th>Shipping Address</th>
                <th> Country </th>
                <th> City </th>
                <th> Gender </th>
                <th>Action</th>
            </tr>


        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Id
                    </td>
                    <td>
                        <img class="img-responsive" width="50" height="50" src="~/@user.ImagePath" />
                    </td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Address</td>
                    <td>@user.ShippingAddress</td>
                    <td>@user.Country</td>
                    <td>@user.City</td>
                    <td>@user.Gender</td>
                    <td>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success"><span><strong><i class="fa fa-edit"> Edit</i></strong></span></a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure ,You want to delete ? User : @user.UserName')" id="Delete"><span><i class="fa fa-trash-o"><strong> Delete</strong></i></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No Users Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create an user
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">Create User</a>
        </div>
    </div>
}

